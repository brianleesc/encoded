{
    "title": "Antibody characterization review",
    "description": "Schema for submitting antibody characterization review data.",
    "id": "/profiles/antibody_characterization_review.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "award", "lab", "reviews", "biosample_term_id", "organism", "status"],
    "identifyingProperties": ["uuid", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "characterization_review.json#/properties" },
        { "$ref": "mixins.json#/biosample_classification" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "characterization_document": {
            "title": "Characterization document",
            "description": "A document that is reviewed. ",
            "comment": "See characterization_document.json for available identifiers.",
            "type": "string",
            "linkTo": "characterization_document"
        },

        "organism": {
            "title": "Organism",
            "comment": "See organism.json for available identifiers.",
            "type": "string",
            "linkTo": "organism"
        },
        "lane": {
            "title": "Lane",
            "type": "integer"
        },
        "status": {
            "title": "Characterization status",
            "description": "The current state of the characterization for a particular cell. ",
            "type": "string",
            "permission": "import_items",
            "default": "PENDING DCC REVIEW",
            "enum" : [
                "PENDING DCC REVIEW",
                "COMPLIANT",
                "NOT COMPLIANT"
            ]
        }
    }
}

